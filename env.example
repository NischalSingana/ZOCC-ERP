# Environment Variables for Docker Compose / Coolify
# Copy this file to .env in the project root and fill in your actual values

# ============================================
# Backend Server Environment Variables
# ============================================

# MongoDB Connection
# Local: mongodb://localhost:27017/zocc_erp
# With auth: mongodb://username:password@localhost:27017/zocc_erp
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/zocc_erp
MONGODB_URI=mongodb://mongodb:27017/zocc_erp

# Gmail SMTP Configuration
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password-16chars

# JWT Secret (generate a strong random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Server Configuration
PORT=4000
NODE_ENV=production

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:4173,http://localhost:3000,http://localhost:5173

# ============================================
# Frontend Environment Variables
# ============================================

# API URL (point to your backend)
VITE_API_URL=http://localhost:4000
